<?xml version="1.0" encoding="UTF-8"?>
<!-- 스프링 선언 -->
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"
 "http://www.springframework.org/dtd/spring-beans-2.0.dtd">
<beans>
	<bean id="person" class="com.spring.ex01.PersonServiceImpl">
		<property name="name">
			<value>홍길동</value>
		</property>
		<property name="age">
			<value>30</value>
		</property>
	</bean>
	<bean id="person1" class="com.spring.ex02.PersonServiceImpl">
		<constructor-arg value="김철수"/>
	</bean>
	<bean id="person2" class="com.spring.ex02.PersonServiceImpl">
		<constructor-arg value="김철수"/>
		<constructor-arg value="25"/>
	</bean>
</beans>